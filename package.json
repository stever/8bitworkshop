{
  "name": "8bitworkshop",
  "version": "3.9.1",
  "author": "Steven Hugg",
  "description": "8bitworkshop.com retro programming IDE",
  "license": "GPL-3.0",
  "scripts": {
    "build:checked": "run-s build:tsc build",
    "build": "run-p build:es:ui build:es:worker",
    "clean": "run-s clean:build clean:dist",
    "clean:build": "del-cli build",
    "clean:dist": "del-cli public/dist",
    "clean:dist:deps": "del-cli public/dist/deps",
    "clean:dist:out": "run-p clean:dist:out:ui clean:dist:out:worker",
    "clean:dist:out:ui": "del-cli public/dist/main.js*",
    "clean:dist:out:worker": "del-cli public/dist/worker.js*",
    "cp": "run-s cp:jquery cp:bootstrap cp:bootbox cp:codemirror",
    "cp:jquery": "copyfiles -u 3 node_modules/jquery/dist/jquery.min.js ./public/dist/deps/",
    "cp:bootstrap": "copyfiles -u 3 \"node_modules/bootstrap/dist/**/*\" ./public/dist/deps/bootstrap/",
    "cp:bootbox": "copyfiles -u 3 node_modules/bootbox/dist/bootbox.all.min.js ./public/dist/deps/",
    "cp:codemirror": "run-s cp:codemirror:lib cp:codemirror:modes cp:codemirror:addons",
    "cp:codemirror:lib": "copyfiles -u 3 \"node_modules/codemirror/lib/*\" ./public/dist/deps/codemirror/",
    "cp:codemirror:modes": "copyfiles -u 3 \"node_modules/codemirror/mode/**/*\" ./public/dist/deps/codemirror/mode/",
    "cp:codemirror:addons": "copyfiles -u 3 \"node_modules/codemirror/addon/**/*\" ./public/dist/deps/codemirror/addon/",
    "build:tsc": "tsc --build tsconfig.json",
    "build:es:worker": "esbuild src/worker/worker.ts --bundle --sourcemap --target=es2017 --outfile=./public/dist/worker.js",
    "build:es:ui": "esbuild src/ui.ts --splitting --format=esm --bundle --minify --sourcemap --target=es2017 --outdir=./public/dist/ --external:path --external:fs",
    "watch:tsc": "tsc -w --preserveWatchOutput",
    "watch:es:worker": "npm run esbuild-worker -- --watch",
    "watch:es:ui": "npm run esbuild-ui -- --watch"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "bootbox": "^6.0.0",
    "bootstrap": "^3.4.1",
    "btoa": "^1.2.1",
    "codemirror": "^5.65.11",
    "error-stack-parser": "^2.1.4",
    "file-saver": "^2.0.5",
    "jquery": "^3.6.3",
    "jsdom": "^20.0.3",
    "localforage": "^1.10.0",
    "mousetrap": "^1.6.5",
    "preact": "^10.11.3",
    "split.js": "^1.6.5",
    "yufka": "^3.0.0"
  },
  "devDependencies": {
    "@types/bootbox": "^5.2.4",
    "@types/bootstrap": "^5.2.6",
    "@types/emscripten": "^1.39.6",
    "@types/file-saver": "^2.0.5",
    "@types/jquery": "^3.5.16",
    "@types/node": "^18.11.18",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "esbuild": "^0.16.12",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4"
  }
}
